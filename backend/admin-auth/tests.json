{
  "tests": [
    {
      "name": "OPTIONS request returns CORS headers",
      "method": "OPTIONS",
      "path": "/",
      "expectedStatus": 200
    },
    {
      "name": "POST without password returns 401",
      "method": "POST",
      "path": "/",
      "body": {"password": "test"},
      "expectedStatus": 401,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "GET without token returns 401",
      "method": "GET",
      "path": "/",
      "expectedStatus": 401,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "PUT with wrong master key returns 401",
      "method": "PUT",
      "path": "/",
      "body": {"master_key": "wrong", "new_password": "newpass123"},
      "expectedStatus": 401,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "PUT with correct master key returns 200",
      "method": "PUT",
      "path": "/",
      "body": {"master_key": "K7#m@nPq$vR2!xL", "new_password": "newpass123"},
      "expectedStatus": 200,
      "expectedBody": {
        "success": true
      },
      "bodyMatcher": "partial"
    }
  ]
}